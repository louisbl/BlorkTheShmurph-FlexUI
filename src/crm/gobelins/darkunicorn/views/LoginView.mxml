<?xml version="1.0" encoding="utf-8"?>
<views:AView xmlns:fx="http://ns.adobe.com/mxml/2009" 
			 xmlns:s="library://ns.adobe.com/flex/spark" xmlns:views="crm.gobelins.darkunicorn.views.*"
			 currentState="wait">
	<fx:Script>
		<![CDATA[
			import com.facebook.graph.data.FacebookSession;
			
			import crm.gobelins.darkunicorn.services.FbLoginVo;
			import crm.gobelins.darkunicorn.services.UserVo;
			
			import mx.events.FlexEvent;
			
			public var login_vo:FbLoginVo;
			
			public function onFbLoggedIn():void
			{
				currentState = "fb_logged_in";
			}
			
			public function onFbLoggedOut():void
			{
				currentState = "login";
			}
			
			public function onLocalLoggedIn():void
			{
				currentState = "local_logged_in";
			}
			
			protected function _onEnterState():void
			{
				login_vo = new FbLoginVo();
				login_vo.stage = stage;
				login_vo.view = new StageWebView();
				login_vo.view.viewPort = new Rectangle(0, 0, stage.stageWidth, stage.stageHeight);
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	<views:states>
		<s:State name="fb_logged_in" />
		<s:State name="local_logged_in" />
		<s:State name="login" enterState="_onEnterState()"/>
		<s:State name="local" />
		<s:State name="wait" />
	</views:states>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5" gap="5" 
							  horizontalAlign="center" verticalAlign="middle"/>
		</s:layout>
		<s:Label includeIn="wait" text="{resourceManager.getString('login','wait')}"/>
		<s:Label includeIn="login" text="{resourceManager.getString('login','facebook')}"/>
		<s:Button id="btn_login" includeIn="login" click="{currentState='wait'}">
			<s:label>{resourceManager.getString('login','login')}</s:label>
		</s:Button>
		<s:Group width="100%">
			<s:layout>
				<s:HorizontalLayout paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5" gap="5"  
									horizontalAlign="center" verticalAlign="middle"/>
			</s:layout>
		<s:Image id="user_picture" includeIn="fb_logged_in" source="{data.user_picture}" />
		<s:Label id="user_name" includeIn="fb_logged_in,local_logged_in" text="{data.user_name}"/>		
		<s:Button id="btn_logout" includeIn="fb_logged_in" click="{currentState='wait'}">
			<s:label>{resourceManager.getString('login','logout')}</s:label>
		</s:Button>
		</s:Group>  
		<s:Label includeIn="login" text="{resourceManager.getString('login','wo_facebook')}"/>
		<s:Button id="btn_local" includeIn="login" click="{currentState='local'}">
			<s:label>{resourceManager.getString('login','local')}</s:label>
		</s:Button>
		<s:Label includeIn="local" text="{resourceManager.getString('login','set_nickname')}"/>
		<s:TextInput id="nickname" includeIn="local"/>
		<s:Button id="btn_nickname" includeIn="local" label="{resourceManager.getString('login','nickname')}"/>
		<s:Button id="btn_play" includeIn="fb_logged_in,local_logged_in">
			<s:label>{resourceManager.getString('login','play')}</s:label>
		</s:Button>
	</s:Group>
</views:AView>
